generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  status    Boolean  @default(true)
  createdAt DateTime @default(now())

  role UserRole?
}

model UserRole {
  id     String @id @default(uuid())
  userId String @unique
  role   Role

  user User @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  PEMBELI
}
